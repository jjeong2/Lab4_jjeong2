<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/timeText"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/team2Text"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeText"
        android:layout_alignEnd="@+id/timeText"
        android:id="@+id/locText"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:src="@drawable/badge"
        android:layout_width="@dimen/team_logo"
        android:layout_height="@dimen/team_logo"
        android:id="@+id/teamLogo2"
        android:layout_alignTop="@+id/teamLogo1"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/teamLogo1"
        android:id="@+id/team1Text"
        android:layout_toRightOf="@+id/teamLogo1"
        android:layout_width="100dp" />

    <TextView
        android:text="TextView"
        android:layout_height="wrap_content"
        android:layout_below="@+id/team1Text"
        android:layout_alignEnd="@+id/team1Text"
        android:id="@+id/team1Mascot"
        android:layout_toRightOf="@+id/teamLogo1"
        android:layout_width="wrap_content" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/teamLogo2"
        android:id="@+id/team2Text"
        android:layout_toLeftOf="@id/teamLogo2" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/team1Mascot"
        android:id="@+id/team2Mascot"
        android:layout_toLeftOf="@+id/teamLogo2" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/team1Mascot"
        android:layout_toEndOf="@+id/teamLogo1"
        android:id="@+id/team1Record"
        android:layout_toRightOf="@+id/teamLogo1" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/team2Mascot"
        android:id="@+id/team2Record"
        android:layout_toLeftOf="@+id/teamLogo2"
        android:textAlignment="textEnd" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/team2Text"
        android:layout_centerHorizontal="true"
        android:id="@+id/scoreText" />

    <TextView
        android:text="Final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scoreText"
        android:layout_centerHorizontal="true"
        android:id="@+id/finalText" />

    <Button
        android:text="Camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="112dp"
        android:id="@+id/cameraButton" />

    <ImageView
        android:src="@drawable/badge"
        android:layout_width="@dimen/team_logo"
        android:layout_height="@dimen/team_logo"
        android:id="@+id/teamLogo1"
        android:layout_below="@+id/locText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />
</RelativeLayout>